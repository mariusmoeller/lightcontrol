extends layout
append javascript
  script(src='/javascripts/gamepad.js')
  script(src='/javascripts/controller.js')
  script(src='/javascripts/obstacles.js')
  script.
    controller.init();
    gamepadSupport.init();
block content
  .container
    .row
      .col-md-9.col-md-offset-1.top-space
        div.jumbotron
         h2 Virtual Hot Wire
         div.infoText Use a X-Box Controller to drive through a labyrinth bla bla
         img#pongLogo(src="/img/pong.png")(style="position:relative;width:60%;left:20%;border-radius:90px")
        .row#labyrinths
          .col-md-3
            .thumbnail
             img(src='img/easy-thumbnail.jpg', name="easy")
          .col-md-3
            .thumbnail
             img(src='img/medium-thumbnail.jpg', name="medium")
           .col-md-3
            .thumbnail
             img(src='img/difficult-thumbnail.jpg', name="difficult")
        .row#labyrinthOptions(style="display:none;")
                div#accordion.panel-group
                  div.panel.panel-default
                    div.panel-heading
                      h4.panel-title
                        a(data-toggle='collapse', data-parent='#accordion', href='#collapseOne') Configuration
                      a#labConfDone.btn.btn-default(type='button') Done
                    div#collapseOne.panel-collapse.collapse.in
                      div.panel-body
                        form(role='form')
                        .form-group
                          label(for='distance') Distance
                          input#distance.form-control(type='text', placeholder='Enter Distance in cm', value='210')
                        .form-group
                          label(for='washHeight') Wash Height
                          input#washHeight.form-control(type='text', placeholder='Enter  Height of Wash in cm', value='52')
                        .form-group
                          label(for='projectorHeight') Projector Height
                          input#projectorHeight.form-control(type='text', placeholder='Enter Height of Projector in cm', value ='114')
                        .form-group
                          label(for='screenWidth') Screen Width
                          input#screenWidth.form-control(type='text', placeholder='Enter Width of Screen in cm', value='210')
                        .form-group
                          label(for='screenHeight') Screen Height
                          input#screenHeight.form-control(type='text', placeholder='Enter Height of Screen in cm', value='122')
  div#race
   img.bg
   button#backButton.btn.btn-default.btn-lg.btn-block Back
   .game-information
      span#time
      br
      br
      span#score(style="font-size:75%;")
  #gameFinished.modal.fade(tabindex='-1', role='dialog', aria-hidden='true')
    .modal-dialog
      .modal-content
        .modal-body
          | You finished the Game in 
          span#gameTime 12387
          |  seconds!
          br
          | Your fastest turn took 
          span#fastestTurn 11
          |  seconds! 
          br
          | You reached 
          span#totalScore 0
          |  points!
        .modal-footer
          button#again.btn.btn-default(type='button', data-dismiss='modal') Try Again
          button#back.btn.btn-primary(type='button') Back to App